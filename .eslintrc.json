{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "xo"
  ],
  "overrides": [
    {
      "extends": [
        "xo-typescript"
      ],
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "capitalized-comments": 0,
        "@typescript-eslint/naming-convention": 0,
        "@typescript-eslint/ban-ts-comment": 1,
        "@typescript-eslint/consistent-type-definitions": [
          2,
          "interface"
        ]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {}
}
